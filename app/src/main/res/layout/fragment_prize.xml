<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.profitpage.PrizeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جایزه های دریافتی"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جوایز بازی"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/zero"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:background="@drawable/redbackground"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_toLeftOf="@id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ندارید"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="جوایز لاتاری"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:id="@+id/secondLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/zero2"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:background="@drawable/redbackground"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_toLeftOf="@id/zero2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ندارید"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvLatari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تخفیف ها"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline1"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:id="@+id/thirdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/zero3"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:background="@drawable/redbackground"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_toLeftOf="@id/zero3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ندارید"
                    android:layout_marginTop="5dp"
                    android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvProfit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>