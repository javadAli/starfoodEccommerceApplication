<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layoutDirection="rtl"
    android:layout_margin="3dp">
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/fimg" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:src="@drawable/starfood" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is a test textttttttttttt"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/img"
            android:padding="4dp"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/thirdLinear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:background="@color/gray"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/numberLinear"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/thirdLinear"
            android:gravity="center"
            android:weightSum="3">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.6"
                android:scaleType="centerInside"
                android:tint="@color/colorPrimary"
                android:src="@drawable/favorite"
                tools:ignore="UseAppTint" />
            <TextView
                android:id="@+id/mobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="240000 "
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/homeNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="190000 "
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLinear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/numberLinear"
            android:background="@color/gray"
            android:orientation="horizontal">
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="انتخاب تعداد"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableTint="@color/white"
            android:drawablePadding="5dp"
            android:layout_below="@+id/secondLinear"
            android:gravity="center"
            android:background="@drawable/redbackground"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>