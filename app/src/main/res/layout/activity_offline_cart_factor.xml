<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cart.FactorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/baseline_check_circle_24"
                    app:tint="@color/green"
                    android:layout_gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/numFac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شماره فاکتور"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                        />
                    <TextView
                        android:id="@+id/numberFactor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/light_blue_background"
                        android:layout_toLeftOf="@id/numFac"
                        android:textColor="@color/blue500"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                        />

                </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/numFac2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="شماره فاکتور"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                        />
                    <TextView
                        android:id="@+id/numberFactor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/light_blue_background"
                        android:layout_toLeftOf="@id/numFac2"
                        android:textColor="@color/blue500"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سود شما از این خرید"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                        />
                    <TextView
                        android:id="@+id/profitTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 تومان"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/profit"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
                        />

                </RelativeLayout>
                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" بازگشت به صفحه اصلی"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/bluebackground"
                    android:layout_margin="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/rectangle_textview_background"
                        android:padding="5dp"
                        android:text="ردیف"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_textview_background"
                        android:padding="5dp"
                        android:text="نام کالا"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:background="@drawable/rectangle_textview_background"
                        android:padding="5dp"
                        android:text="تعداد "
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle_textview_background"
                        android:padding="5dp"
                        android:text="قیمت واحد"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle_textview_background"
                        android:padding="5dp"
                        android:text="مبلغ کل "
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>