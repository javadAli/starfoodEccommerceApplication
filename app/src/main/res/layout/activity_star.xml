                    android:visibility="gone" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayNameThird"
                android:text="روز 3"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/fourthLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/corner_radius_background"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dayNumber4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <CheckBox
                    android:id="@+id/dayCheckbox4"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/dayTick4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/dayNoTick4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uncheck2"
                    android:visibility="gone" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayNameFourth"
                android:text="روز 4"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/fifthLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/corner_radius_background"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dayNumber5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <CheckBox
                    android:id="@+id/dayCheckbox5"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/dayTick5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
