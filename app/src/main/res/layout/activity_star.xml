                <ImageView
                    android:id="@+id/dayNoTick5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uncheck2"
                    android:visibility="gone" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayNameFifth"
                android:text="روز 5"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/sixthLayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/corner_radius_background"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/dayNumber6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <CheckBox
                    android:id="@+id/dayCheckbox6"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/dayTick6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/dayNoTick6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/uncheck2"
                    android:visibility="gone" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayNameSixth"
                android:text="روز 6"
                android:textSize="14dp"
                />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/seventhLayout"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/corner_radius_background"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dayNumber7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <CheckBox
                        android:id="@+id/dayCheckbox7"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/dayTick7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/dayNoTick7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uncheck2"
                        android:visibility="gone" />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayNameSeventh"
                    android:text="روز 7"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="هفت روز پشت سر هم مراجعه کنید و ستاره های بیشتری را به دست آورید! جایزه‌های ارزشمندی را برای شما در نظر داریم!"
                    android:textStyle="bold"
                    />
        <Button
            android:id="@+id/buttonScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="دریافت جایزه امروز"
            />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>