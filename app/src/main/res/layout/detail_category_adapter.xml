<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/fimg"/>
        <ImageView
            android:id="@+id/logoRight"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/starfood"
            android:visibility="visible" />
        <TextView
            android:id="@+id/profitIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/iransans"
            android:background="@drawable/redcircl_background"
            android:padding="5dp"
            android:text="%"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline3"
            android:textColor="@color/white"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/logoLeft"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-2dp"
            android:visibility="gone"
            android:src="@drawable/starfood" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="this is a test texttttttttttttttttttttttttt"
            android:gravity="center"
            android:fontFamily="@font/iransans"
            android:maxLines="2"
            android:layout_marginTop="155dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/thirdLinear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/title"
            android:background="@color/gray500"
            android:orientation="horizontal">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/betweenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thirdLinear">

            <ImageView
                android:id="@+id/likeBorderBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/favorite_border"
                app:tint="@color/black" />
            <ImageView
                android:id="@+id/likeBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/favorite"
                app:tint="@color/colorPrimary" />
            <RelativeLayout
                android:id="@+id/remindLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/redbackground"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/remindTxt"
                    android:src="@drawable/baseline_notifications_24"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/remindTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/iransans"
                    android:text="خبرم کنید"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cancelRemindLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_background"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:padding="3dp">
                <TextView
                    android:id="@+id/remindTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="اعلام شد"
                    android:fontFamily="@font/iransans"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/numberLinear"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/profitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="9dp"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/green"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/firstPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="9dp"
                    android:fontFamily="@font/iransans"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/profitPrice"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/secondLinear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/betweenLayout"
            android:layout_marginTop="5dp"
            android:background="@color/gray500"
            android:orientation="horizontal"></LinearLayout>
        <RelativeLayout
            android:id="@+id/selectNumberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondLinear"
            android:background="@drawable/redbackground"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:visibility="visible"
            android:padding="3dp">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/baseline_shopping_cart_24"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/icon"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/iransans"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <TextView
            android:id="@+id/setAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondLinear"
            android:background="@drawable/lightgreen_background"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="5dp"
            android:fontFamily="@font/iransans"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="3کیلو معادل 300 کیلوگرم"/>

        <RelativeLayout
            android:id="@+id/unavailableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondLinear"
            android:background="@drawable/gray_background"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="3dp">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_toLeftOf="@+id/empty"
                android:src="@drawable/baseline_do_disturb_alt_24"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="ناموجود"
                android:fontFamily="@font/iransans"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>